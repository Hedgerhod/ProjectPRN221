<Window x:Class="UIView.View.LoginPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UIView.View"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Title="LoginPage" Height="400" Width="450">
    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="250">
            <TextBlock Text="Login" FontSize="24" FontWeight="Bold" Margin="0,0,0,20" HorizontalAlignment="Center"/>

            <TextBlock Text="Username:"/>
            <TextBox Text="{Binding Username, UpdateSourceTrigger=PropertyChanged}" 
                     Name="txtUsername" Margin="0,5,0,15"/>

            <TextBlock Text="Password:"/>
            <PasswordBox Name="txtPassword" Margin="0,5,0,15" PasswordChanged="PasswordBox_PasswordChanged"/>

            <Button Command="{Binding LoginCommand}" Content="Login" Width="100" Height="30"/>
        </StackPanel>
    </Grid>
</Window>